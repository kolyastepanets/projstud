<% if @subscription.errors.present? %>
    <% @subscription.errors.full_messages.each do |message| %>
        $('.subscription').html('<%= j message %>');
    <% end %>
<% else %>
    $('.subscription').html('<a class="subscribe" data-remote="true" rel="nofollow" data-method="delete" href="/questions/<%=@question.id%>/subscriptions/<%=@subscription.id%>">Unsubscribe</a>');
<% end %>